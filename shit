<body>

    <div class="container">
        <div class="progress-container">
            <div class="progress-bar" id="progressBar"></div>
        </div>

        <div class="header">
            <h1 id="titleText">Self-Check Mental</h1>
            <p id="subtitleText">Jawab jujur sesuai perasaanmu.</p>
        </div>

        <div class="content" id="quizContent">
            <div class="text-center fade-in">
                <p style="margin-bottom: 20px; line-height: 1.6;">
                    Kuis ini sering digunakan di media sosial untuk menentukan "kepribadian" atau "gangguan" kamu. Apakah kamu siap mengetahui hasilnya?
                </p>
                <button class="btn btn-primary" onclick="startQuiz()">Mulai Tes</button>
            </div>
        </div>
    </div>

    <script>
        // Data Pertanyaan (Sengaja dibuat ambigu seperti kuis viral)
        const questions = [
            {
                question: "Apakah kamu sering merasa mood berubah drastis dalam satu hari?",
                options: ["Ya, sering banget", "Kadang-kadang", "Jarang", "Tidak pernah"]
            },
            {
                question: "Apakah kamu merasa terganggu jika melihat benda tidak tertata rapi?",
                options: ["Sangat terganggu!", "Agak risih sih", "Biasa saja", "Gak peduli"]
            },
            {
                question: "Apakah kamu sering merasa lelah padahal tidak melakukan aktivitas fisik berat?",
                options: ["Setiap hari", "Sering", "Kadang", "Jarang"]
            },
            {
                question: "Apakah kamu sering overthinking di malam hari?",
                options: ["Selalu!", "Sering", "Kadang", "Tidurku nyenyak"]
            }
        ];

        let currentQuestionIndex = 0;

        // Fungsi Memulai Kuis
        function startQuiz() {
            currentQuestionIndex = 0;
            renderQuestion();
        }

        // Fungsi Menampilkan Pertanyaan
        function renderQuestion() {
            const contentDiv = document.getElementById('quizContent');
            const progressBar = document.getElementById('progressBar');
            
            // Update Progress Bar
            const progress = ((currentQuestionIndex) / questions.length) * 100;
            progressBar.style.width = `${progress}%`;

            // Template Pertanyaan
            const questionData = questions[currentQuestionIndex];
            
            let html = `
                <div class="fade-in">
                    <h3 style="margin-bottom: 25px; font-weight: 600;">${questionData.question}</h3>
                    <div class="options-list">
            `;

            questionData.options.forEach((option) => {
                html += `<button class="btn" onclick="handleAnswer()">${option}</button>`;
            });

            html += `
                    </div>
                </div>
            `;

            contentDiv.innerHTML = html;
        }

        // Fungsi Handle Jawaban (Logika Satir)
        function handleAnswer() {
            currentQuestionIndex++;
            if (currentQuestionIndex < questions.length) {
                renderQuestion();
            } else {
                showResult();
            }
        }

        // Fungsi Menampilkan Hasil (The Educational Twist)
        function showResult() {
            const contentDiv = document.getElementById('quizContent');
            const progressBar = document.getElementById('progressBar');
            const titleText = document.getElementById('titleText');
            const subtitleText = document.getElementById('subtitleText');

            progressBar.style.width = '100%';
            titleText.innerText = "Hasil Analisa";
            subtitleText.innerText = "Berdasarkan jawabanmu...";

            // Pesan hasil yang memberikan 'reality check'
            contentDiv.innerHTML = `
                <div class="result-box fade-in">
                    <h2 style="color: var(--primary); margin-bottom: 15px;">Tunggu Dulu.</h2>
                    
                    <p style="margin-bottom: 15px; font-size: 1.1rem;">
                        Jika ini adalah TikTok atau kuis online sembarangan, kamu mungkin akan didiagnosa terkena <span class="highlight">Bipolar, OCD, atau Depresi</span> hanya karena kamu menjawab "Ya".
                    </p>

                    <hr style="border: 0; border-top: 1px solid #eee; margin: 20px 0;">

                    <p style="font-weight: 600; margin-bottom: 10px;">Kenyataannya:</p>
                    <p style="margin-bottom: 20px;">
                        Perubahan mood, suka kerapian, dan rasa lelah adalah <strong>emosi manusia yang wajar</strong>. Memiliki gejala bukan berarti memiliki gangguan.
                    </p>

                    <div class="disclaimer-box">
                        <strong>Penting:</strong><br>
                        Diagnosa kesehatan mental hanya boleh dilakukan oleh profesional (Psikolog/Psikiater) melalui observasi mendalam, bukan lewat kuis 4 pertanyaan di internet.
                    </div>

                    <button class="btn btn-primary" style="margin-top: 20px;" onclick="location.reload()">Coba Lagi</button>
                </div>
            `;
        }
    </script>
</body>
</html>
